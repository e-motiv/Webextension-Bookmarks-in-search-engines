{
	"manifest_version": 2,
	"name": "Bookmarks in search engines",
	"version": "1.0.1b",
	"description": "Search, highlight and display relevant bookmarks when searching in your favorite search engine (Google only for now)",
	"applications": {
		"gecko": {
			"id": "BookMarksISE@e-motiv.net"
		}
	},
	"author": "e-motiv <Ruben@e-motiv.net> (attic.e-motiv.net)",
	"background": {
		"scripts": [
			"bg.js"
		]
	},
  "browser_action": {
    "default_icon": {
      "16": "search-bookmarked16.png", 
      "32": "search-bookmarked32.png", 
      "48": "search-bookmarked48.png"
    }, 
    "default_title": "Bookmarks in search engines",
    "default_popup": "popup.html"
  }, 
	"options_ui": {
		"page": "options.html"
	},
	"permissions": ["<all_urls>", "notifications", "storage", "bookmarks",	"activeTab", "webNavigation", "tabs"] 
}
